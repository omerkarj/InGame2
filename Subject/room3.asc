// room script file
bool firstEntry = true;
bool diedOnce = false;

function room_LeaveLeft()
{
  player.ChangeRoom(1);
}

function room_AfterFadeIn()
{
  if (firstEntry){
    cMick.Walk(210, 700, eBlock);
    dSubIntOpening1.Start();
    firstEntry = false;
  }
  else {
    cMick.Walk(210,  700,  eBlock);
    dSubIntOpening2.Start();
  }
}
function room_Load()
{
  cMick.x = 130;
  cMick.y = 700;
  cSal.x = 500;
  cSal.y = 240;
}

function oExitDoor_Interact()
{
  cMick.Walk(842, 663, eBlock);
  if (!diedOnce){
    cSal.Say("This is too good ha ha! I can't breath!! And neither can you!");
    diedOnce = true;
    player.ChangeRoom(1);
  }
  else if (passwordEntered){
    cSal.Say("Well, that's it. You sure you don't wanna hang?");
    cMick.Say("Yeah. Pretty sure.");
    player.ChangeRoom(4);
  }
  else {
    cSal.Say("Don't bother, I locked it.");
  }
}

function oObject0_Interact()
{
  if (diedOnce){
    cMick.Walk(304,  495,  eBlock);
    gDrawer.Visible = true;
    gDrawer.SetPosition(168, 50);
  }
  else {
    cSal.Say("I said the door is right there.");
  }
}



