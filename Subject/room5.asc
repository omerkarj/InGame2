// room script file

function fadeToBlack() {
  gFader.Transparency = 0;
  gFader.Visible = true;
  int i = 0;
  while (i < 100) {
    gFader.Transparency = i;
    Wait(1);
    i++;
  }
}
function fadeFromBlack() {
  gFader.Transparency = 100;
  int i = 100;
  while (i > 0) {
    gFader.Transparency = i;
    Wait(1);
    i--;
  }
  gFader.Visible = false;
}
  
function room_AfterFadeIn()
{
  SetBackgroundFrame(0);
  
  Wait(50);
  fadeToBlack();
  SetBackgroundFrame(1);
  Wait(10);
  fadeFromBlack();
  
  Wait(50);
  fadeToBlack();
  SetBackgroundFrame(2);
  Wait(10);
  fadeFromBlack();
  
  Wait(50);
  fadeToBlack();
  SetBackgroundFrame(3);
  Wait(10);
  fadeFromBlack();
  
  Wait(50);
  fadeToBlack();
  Wait(10);
  cMick.SayAt(300, 300, 500, "The End");
  
  Wait(10);
  RestartGame();
}

function room_Load()
{
  gPanel.Visible = false;
}
